<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_white_card"
    android:orientation="vertical"
    android:paddingVertical="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/uk"
            android:layout_marginHorizontal="6dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/volume_uk"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/us"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="6dp"
            android:src="@drawable/volume_us"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/enText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:textColor="@color/color_font"
            android:textSize="14sp"
            tools:text="En Version" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:background="@color/black" />

        <TextView
            android:id="@+id/uzText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:textColor="@color/color_font"
            android:textSize="14sp"
            tools:text="Uz version" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="6dp"
            android:src="@drawable/ic_uz"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="6dp"
        android:background="@color/color_back" />

    <TextView
        android:id="@+id/sentence"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_font"
        android:alpha="0.5"
        android:fontFamily="@font/roboto"
        android:text="Sentence: He paid each day and he didn't drop off his rent. " />

</LinearLayout>